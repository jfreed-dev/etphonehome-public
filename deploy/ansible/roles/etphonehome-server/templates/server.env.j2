# ET Phone Home Server Environment
# Managed by Ansible

# Server bind address
ETPHONEHOME_HOST={{ etphonehome_http_host }}
ETPHONEHOME_PORT={{ etphonehome_http_port }}

# API key for authentication
{% if etphonehome_api_key is defined and etphonehome_api_key %}
ETPHONEHOME_API_KEY={{ etphonehome_api_key }}
{% endif %}

# Logging
ETPHONEHOME_LOG_LEVEL={{ etphonehome_log_level }}
ETPHONEHOME_LOG_FILE={{ etphonehome_log_dir }}/server.log
ETPHONEHOME_LOG_MAX_BYTES={{ etphonehome_log_max_bytes }}
ETPHONEHOME_LOG_BACKUP_COUNT={{ etphonehome_log_backup_count }}
